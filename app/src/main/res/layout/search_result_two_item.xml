<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/bg_kk"
    android:padding="0dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
   >

    <TextView
        android:id="@+id/srt_tv_data"
        style="@style/c333333_14"
        android:text="期别：013-2019"
        android:layout_margin="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/colorababab"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/c333333_14"
            android:text="农民出售价：" />

        <TextView
            android:id="@+id/srt_tv_personprice"
            style="@style/c333333_14"
            android:layout_width="78dp"
            android:background="@drawable/bk_ababab_zj"
            android:maxLines="1"
            android:paddingLeft="5dp" />


        <TextView
            style="@style/c333333_14"
            android:layout_marginLeft="3dp"
            android:text="市场价格：" />

        <TextView
            android:id="@+id/srt_tv_marketprice"
            style="@style/c333333_14"
            android:layout_width="78dp"
            android:background="@drawable/bk_ababab_zj"
            android:maxLines="1"
            android:paddingLeft="5dp" />
    </LinearLayout>
</LinearLayout>