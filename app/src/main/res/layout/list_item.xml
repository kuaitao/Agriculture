<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    >

    <CheckBox
        android:id="@+id/cb_select_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/id_treenode_label"
        style="@style/c333333_16"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cb_select_tree"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
       />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/num"
        style="@style/c333333_14"
        android:layout_centerVertical="true"
        android:text="100"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_toLeftOf="@+id/icon"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/states"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toLeftOf="@+id/num"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:background="@color/color00B57F"
        android:textColor="@color/white"
        android:padding="3dp"
        android:textSize="12sp"
        android:text="处理中"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorababab"/>

</RelativeLayout>